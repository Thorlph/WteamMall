<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wteammall.iot.wteammall.UserModule.ResetPassActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/lightslategrey"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_resetpass_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="返回"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:text="重置密码"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_resetpass_tomain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="主页"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_resetpass_username"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="用户名" />

        <TextView
            android:id="@+id/tv_resetpass_nameerror"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/et_resetpass_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="邮箱" />

        <TextView
            android:id="@+id/tv_resetpass_emailerror"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_resetpass_vcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="验证码" />

            <ImageView
                android:id="@+id/iv_resetpass_vcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_resetpass_vcodeerror"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_resetpass_mcode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="邮箱验证码" />

            <Button
                android:id="@+id/bt_resetpass_getmcode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="获取邮箱验证码" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_resetpass_mcodeerror"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/et_resetpass_newpass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="新密码"
            android:inputType="textPassword"
            android:enabled="false"/>

        <TextView
            android:id="@+id/tv_resetpass_newpasserror"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="10sp" />

        <Button
            android:id="@+id/bt_resetpass_reseting"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="确定"
            android:enabled="false"/>

    </LinearLayout>


</LinearLayout>